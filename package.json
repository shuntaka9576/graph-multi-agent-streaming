{
  "name": "agent-core-playground",
  "private": true,
  "workspaces": [
    "apps/*",
    "iac"
  ],
  "packageManager": "bun@1.3.8",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "deploy": "turbo build && bun --filter iac deploy",
    "deploy:hotswap": "turbo build && bun --filter iac deploy:hotswap",
    "synth": "bun --filter iac synth",
    "lint": "turbo lint",
    "type-check": "bun --filter '*' type-check",
    "spell-check": "cspell lint . --cache --gitignore",
    "lint:fmt": "oxfmt --check . && prettier --check '**/*.{json,yaml}'",
    "lint:oxlint": "oxlint . --type-aware --type-check --deny-warnings",
    "fix": "oxfmt . && prettier --write '**/*.{json,yaml}'"
  },
  "devDependencies": {
    "cspell": "^9.6.2",
    "lefthook": "^2.0.16",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "oxlint-tsgolint": "^0.11.4",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "turbo": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "react-markdown": "^10.1.0"
  }
}
